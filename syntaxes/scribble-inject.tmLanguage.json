{
    "scopeName": "source.scribble.injection",
    "injectionSelector": "L:comment.block.documentation",
    "patterns": [
        {
            "include": "#annotation"
        }
    ],
    "repository": {
        "annotation": {
            "contentName": "meta.embedded.annotation.scribble",
            "begin": "(@custom:scribble\\s+)?#",
            "end": ";",
            "patterns": [
                {
                    "include": "source.scribble"
                }
            ]
        }
    }
}
